---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} author={frontmatter.author}>
	<div class="container max-w-5xl section-padding md:text-lg mb-10 md:mb-20">
		<div class="text-muted-foreground text-sm font-medium text-center mb-8"><a href="/blog" class="transition-all hover:text-foreground">Blog</a> <span class="mx-1 font-light">/</span> News</div>
		<h1 class="text-display-section font-bold text-center max-w-xl mx-auto mb-6">
			{frontmatter.title}
		</h1>
		<hr class="my-6 md:my-8 max-w-2xl mx-auto">
		<div class="mb-8 text-center text-muted-foreground text-tight text-base">{frontmatter.author} <span class="mx-2">Â·</span> {frontmatter.date}</div>
		<slot />
	</div>
</BaseLayout>