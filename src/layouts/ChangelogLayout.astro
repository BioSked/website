---
import BaseLayout from './BaseLayout.astro';
const { frontmatter } = Astro.props;

const postDate = new Date(frontmatter.date);
const pubDate = postDate.toLocaleDateString('en-US', {
    year: 'numeric',
    month: 'long',
    day: 'numeric'
});
---

<BaseLayout title={frontmatter.title} description={frontmatter.description} author={frontmatter.author} noIndex={frontmatter.noindex}>
	<div class="container max-w-5xl section-padding md:text-lg mb-10 md:mb-20">
		<div class="text-muted-foreground text-sm font-medium text-center mb-8"><a href="/changelog" class="transition-all hover:text-foreground">Changelog</a></div>
		<h1 class="text-display-section font-bold text-center max-w-xl mx-auto mb-6">
			{frontmatter.title}
		</h1>
		<hr class="my-6 md:my-8 max-w-2xl mx-auto">
		<div class="mb-8 max-w-2xl mx-auto text-center text-muted-foreground text-tight text-base"><span class="bg-blue-400/15 rounded py-2 px-3 text-secondary">Momentum {frontmatter.version}</span> <span class="mx-2">Â·</span> {pubDate}</div>
		<slot />
	</div>
</BaseLayout>