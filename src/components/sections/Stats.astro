---
import { Users, Building2, Earth } from 'lucide-astro';
---

<section class="py-0">
  <div class="container">
      <h2 class="text-display-section">
Powers the most demanding healthcare organizations
    </h2>
    <div class="grid gap-10 pt-9 md:grid-cols-3 lg:gap-0 lg:pt-12">
      <div class="text-center">
        <div class="flex items-center justify-center gap-3">
          <Users class="size-7 text-primary shrink-0 -mb-1" />
          <p class="text-metric-large">50,000+</p>
        </div>
        <p class="text-muted-foreground text-base mt-2">
          daily active users
        </p>
      </div>
      <div class="text-center">
        <div class="flex items-center justify-center gap-3">
          <Building2 class="size-7 text-primary shrink-0 -mb-1" />
          <p class="text-metric-large">1,000+</p>
        </div>
        <p class="text-muted-foreground text-base mt-2">
          healthcare sites
        </p>
      </div>
      <div class="text-center">
        <div class="flex items-center justify-center gap-3">
          <Earth class="size-7 text-primary shrink-0 -mb-1" />
          <p class="text-metric-large">9+</p>
        </div>
        <p class="text-muted-foreground text-base mt-2">
          countries worldwide
        </p>
      </div>
    </div>
  </div>
</section>
