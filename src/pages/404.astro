---
import BaseLayout from '@/layouts/BaseLayout.astro';
import Button from '@/components/ui/Button.astro';
import { Home, ArrowLeft, Mail, Book } from 'lucide-astro';
---

<BaseLayout 
  title="Page Not Found | Momentum by BioSked" 
  description="The page you're looking for doesn't exist. Return to our homepage or contact us for help."
>
  <section class="section-padding relative overflow-hidden">
    <div class="absolute inset-0 z-0 pointer-events-none opacity-20 dark:opacity-30">
      <div class="blob-primary absolute top-1/3 right-1/4 size-[500px] rounded-full blur-3xl"></div>
      <div class="blob-accent absolute bottom-1/3 left-1/4 size-[400px] rounded-full blur-3xl"></div>
    </div>

    <div class="container relative z-10">
      <div class="mx-auto max-w-3xl text-center">
        <div class="mb-6">
          <span class="text-9xl font-thin text-muted-foreground/30 dark:text-muted-foreground/20">404</span>
        </div>

        <h1 class="text-display-hero mb-4">
          Page Not Found
        </h1>

        <p class="mx-auto max-w-md text-lead text-muted-foreground mb-8">
          Looks like this page took an unscheduled break. Let's get you back on track.
        </p>

        <div class="flex flex-wrap justify-center gap-4 mb-12">
          <Button
            size="lg"
            className="rounded-full shadow-sm shadow-primary/50 hover:shadow-md px-5! font-semibold ease-in-out transition-all duration-200 border border-white/50"
            href="/"
          >
            <Home class="size-4" />
            Back to Home
          </Button>
        </div>

        <div class="mt-16 pt-12 border-t border-border">
          <h2 class="text-xl font-semibold mb-6">Helpful Links</h2>
          
          <div class="grid md:grid-cols-3 gap-6 text-left">
            <a 
              href="/pricing" 
              class="p-6 bg-white/50 hover:bg-white/70 shadow-sm shadow-secondary/5 hover:outline-primary hover:outline-1 rounded-lg border border-secondary/10"
            >
              <h3 class="font-semibold mb-2">
                Pricing Plans
              </h3>
              <p class="text-sm text-muted-foreground">
                View our transparent pricing for healthcare scheduling software
              </p>
            </a>

            <a 
              href="/about" 
              class="p-6 bg-white/50 hover:bg-white/70 shadow-sm shadow-secondary/5 hover:outline-primary hover:outline-1 rounded-lg border border-secondary/10"
            >
              <h3 class="font-semibold mb-2">
                About Us
              </h3>
              <p class="text-sm text-muted-foreground">
                Learn about BioSked and our Momentum platform
              </p>
            </a>

            <a 
              href="/careers" 
              class="p-6 bg-white/50 hover:bg-white/70 shadow-sm shadow-secondary/5 hover:outline-primary hover:outline-1 rounded-lg border border-secondary/10"
            >
              <h3 class="font-semibold mb-2">
                Careers
              </h3>
              <p class="text-sm text-muted-foreground">
                Join our team and help transform healthcare scheduling
              </p>
            </a>
          </div>
        </div>

        <div class="my-8">
          <p class="text-sm text-muted-foreground">
            Looking for something specific? 
            <a href="/contact" class="text-foreground hover:underline font-medium">Contact our team</a>
            and we'll help you find it.
          </p>
        </div>
      </div>
    </div>
  </section>
</BaseLayout>
